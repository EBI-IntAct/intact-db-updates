<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!--<Loader delegate="true"/>-->

<Resource name="${db.jndi}"
            auth="Container"
            type="javax.sql.DataSource"
            username="${db.user}"
            password="${db.password}"
            driverClassName="${db.driver}"
            url="${db.url}"
            maxActive="8"
            maxIdle="4"/>

<Resource name="${db.update.jndi}"
            auth="Container"
            type="javax.sql.DataSource"
            username="${db.update.user}"
            password="${db.update.password}"
            driverClassName="${db.update.driver}"
            url="${db.update.url}"
            maxActive="8"
            maxIdle="4"/>


</Context>